<body>
    <div id="app">
        <div class="table_menu_list">
            <table class="table table-striped table-bordered table-hover" id="sample-table">
                <thead>
                    <tr>
                        <th width="80">编号</th>
                        @*<th width="80">模块</th>
                        <th width="100">操作详情</th>
                        <th width="80">操作账号</th>
                        <th width="80">IP地址</th>
                        <th width="120">备注</th>*@
                        <th width="100">时间</th>
                    </tr>
                </thead>
                <tbody v-for="notice in notices">
                    <tr>
                        <td v-html="notice.content"></td>
                        @*<td v-html="log.permissionTypeName"></td>
                        <td v-html="log.description"></td>
                        <td v-html="log.adminMobile"></td>
                        <td v-html="log.ipAddress"></td>
                        <td v-html="log.tip"></td>*@
                        <td v-html="notice.createTime"></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="page-bar">
            <ul>
                <li><a v-on:click="cur=1,pageClick()">首页</a></li>
                <li v-if="cur>1"><a v-on:click="cur--,pageClick()">上一页</a></li>
                <li v-if="cur==1"><a class="banclick">上一页</a></li>
                <li v-for="index in indexs" v-bind:class="{ 'active': cur == index}"><a v-on:click="btnClick(index)" v-html="index"></a></li>
                <li v-if="cur!=all"><a v-on:click="cur++,pageClick()">下一页</a></li>
                <li v-if="cur == all"><a class="banclick">下一页</a></li>
                <li><a><input type='text' id='txtPage' style='width: 30px;height: 20px;' v-model="txtPage" onkeyup="value=value.replace(/[^\d]/g,'')" /></a></li>
                <li><a id='go' v-on:click="go">跳转</a></li>
                <li><a v-on:click="cur=all,pageClick()">尾页</a></li>
                <li><a>共<i><font v-html="all"></font></i>页</a></li>
            </ul>

        </div>
    </div>
</body>
