<script type="text/javascript">
    var startTime;
    var endTime;
    var vue = new Vue({
        el: "#app",
        data: {
            notices: [],
            all: "", //总页数
            cur: 1,//当前页码
            txtPage: ""

        },
        methods: {
            btnClick: function (data) {//页码点击事件 
                if (data != this.cur) {
                    this.cur = data
                }
                this.pageClick();
                //alert(Url)
            },
            pageClick: function () {

                this.$http.post("/admin/notice/list1?pageIndex=" + this.cur).then(function (result) {
                    this.notices = result.data.data.notices;
                })
                //console.log('现在在'+this.cur+'页');
            },
            go: function () {

                if (this.txtPage == "") {
                    return;
                }
                else {
                    this.cur = this.txtPage;
                }

                this.$http.post("/admin/notice/list1?pageIndex=" + this.cur).then(function (result) {
                    this.notices = result.data.data.notices;
                })
            }
        },
        computed: {
            indexs: function () {
                var left = 1;
                var right = this.all;
                var ar = [];
                if (this.all >= 5) {
                    if (this.cur > 3 && this.cur < this.all - 2) {
                        left = this.cur - 2
                        right = this.cur + 2
                    } else {
                        if (this.cur <= 3) {
                            left = 1
                            right = 5
                        } else {
                            right = this.all
                            left = this.all - 4
                        }
                    }
                }
                while (left <= right) {
                    ar.push(left)
                    left++
                }
                return ar
            }

        },
        mounted: function () {
            this.$http.post("/admin/notice/list1?pageIndex=" + this.cur).then(function (result) {
                this.notices = result.data.data.notices;
                this.all = result.data.data.totalCount;
            })
        }
    });
</script>
