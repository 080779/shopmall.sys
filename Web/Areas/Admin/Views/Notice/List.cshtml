    <script src="~/assets/laydate/laydate.js" type="text/javascript"></script>
    <title>公告栏管理</title>
</head>

<body>
    <div id="app">
        <div class="clearfix" style="margin-top:20px">
            <span class="l_f">
                <a v-on:click="add" class="btn btn-success"><i class="icon-plus"></i>新增公告</a>
            </span>
        </div>
        <div class="search_style">
            <ul class="search_content clearfix">
                @*<li><label class="l_f">添加时间</label>
                <input class="inline laydate-icon" id="start" style=" margin-left:10px;" v-on:focus='getstart' />至
                <input class="inline laydate-icon" id="end" style=" margin-left:10px;" v-on:focus='getend' /></li>*@
                <li>
                    <label class="l_f">公告信息</label>
                    <input name="" v-model="searchs.keyword" type="text" class="text_add" placeholder="公告信息" style=" width:150px" />
                </li>
                <li style="width:90px;"><button type="button" v-on:click="search" class="btn_search"><i class="icon-search"></i>查询</button></li>
            </ul>
        </div>
        <div class="table_menu_list">
            <table class="table table-striped table-bordered table-hover" id="sample-table">
                <thead>
                    <tr>
                        <th width="60">编号</th>
                        <th width="100">发布时间</th>
                        <th width="100">失效时间</th>
                        <th width="100">公告编号</th>
                        <th width="120">公告内容</th>
                        <th width="60">状态</th>
                        <th width="100">转向链接</th>
                        <th width="120">操作</th>
                    </tr>
                </thead>
                <tbody v-for="notice in notices">
                    <tr>
                        <td v-html="notice.id"></td>
                        <td v-html="notice.createTime"></td>
                        <td v-html="notice.failureTime"></td>
                        <td v-html="notice.code"></td>
                        <td v-html="notice.content"></td>
                        <td v-html="notice.isEnabled==true?'已启用':'停用'"></td>
                        <td v-html="notice.url"></td>
                        <td>
                            <a class="btn btn-xs btn-info" v-on:click="getnotices(admin.id)">查看公告</a>
                            <a v-on:click="edit(notice.id)" href="javascript:;" title="修改公告" class="btn btn-xs btn-success">修改公告</a>
                            <a title="删除" href="javascript:;" v-on:click="del(notice.id)" class="btn btn-xs btn-warning">删除公告</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="page-bar">
            <ul>
                <li><a v-on:click="pages.cur=1,getpage()">首页</a></li>
                <li v-if="pages.cur>1"><a v-on:click="pages.cur--,getpage()">上一页</a></li>
                <li v-if="pages.cur==1"><a class="banclick">上一页</a></li>
                <li v-for="index in indexs" v-bind:class="{'active':pages.cur==index}"><a v-on:click="pageclick(index)" v-html="index"></a></li>
                <li v-if="pages.cur!=pages.all"><a v-on:click="pages.cur++,getpage()">下一页</a></li>
                <li v-if="pages.cur==pages.all"><a class="banclick">下一页</a></li>
                <li><a><input type='text' id='txtpage' style='width: 30px;height: 18px;' v-model="pages.txtpage" onkeyup="value=value.replace(/[^\d]/g,'')" /></a></li>
                <li><a id='go' v-on:click="go">跳转</a></li>
                <li><a v-on:click="pages.cur=pages.all,getpage()">尾页</a></li>
                <li><a>共<i><font v-html="pages.all"></font></i>页</a></li>
            </ul>
        </div>

        <!--添加用户图层-->
        <div class="add_menber" id="add" style="display:none">
            <ul class="page-content">
                <li><label class="label_name">公告内容：</label><span class="add_name"><input value="" placeholder="公告内容" v-model="adds.content" type="text" class="text_add" /></span><div class="prompt r_f"></div></li>
                <li><label class="label_name">转向连接：</label><span class="add_name"><input placeholder="转向连接" type="text" v-model="adds.url" class="text_add" /></span><div class="prompt r_f"></div></li>
                <li><label class="label_name">失效时间：</label><span class="add_name"><input class="inline laydate-icon" id="failureTime" style=" margin-left:10px;" v-on:focus='getfailuretime' /></span><div class="prompt r_f"></div></li>                
            </ul>
        </div>

        <!--修改用户图层-->
        <div class="add_menber" id="edit" style="display:none">
            <ul class="page-content">
                <li><label class="label_name">公告编号：</label><span class="add_name"><label v-html="edits.code"></label></span><div class="prompt r_f"></div></li>
                <li><label class="label_name">公告名称：</label><span class="add_name"><input value="" placeholder="公告名称" v-model="edits.content" type="text" class="text_add" /></span><div class="prompt r_f"></div></li>
                <li><label class="label_name">转向连接：</label><span class="add_name"><input placeholder="转向连接" type="text" v-model="edits.url" class="text_add" /></span><div class="prompt r_f"></div></li>
                <li><label class="label_name">失效时间：</label><span class="add_name"><input class="inline laydate-icon" id="failureTime1" style=" margin-left:10px;" v-on:focus='getfailuretime1' /></span><div class="prompt r_f"></div></li>
            </ul>
            <input type="hidden" v-model="edits.imgUrl" />
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    var startTime;
    var endTime;
    var vue = new Vue({
        el: "#app",
        data: {
            notices: [],
            pages: {
                all: "", cur: 1, txtpage: ""
            },
            adds: {
                content: "", url: "Http://", failureTime: ""
            },
            edits: {
                code: "", content: "", url: "", failureTime: ""
            },
            searchs: {
                startTime: "", endTime: "",keyword:""
            }
        },
        methods: {
            getfailuretime: function () {
                var that = this;
                laydate({
                    elem: '#failureTime',
                    choose: function (date) {
                        that.adds.failureTime = date;
                    }
                });
            },
            getfailuretime1: function () {
                var that = this;
                laydate({
                    elem: '#failureTime1',
                    choose: function (date) {
                        that.edits.failureTime = date;
                    }
                });
            },
            getpage: function () {
                this.$http.post('/admin/notice/list', { keyword: this.searchs.keyword, startTime: this.searchs.startTime, endTime: this.searchs.endTime, pageIndex: this.pages.cur }, { emulateJSON: true }).then(function (result) {
                    this.notices = result.data.data.notices;
                    this.pages.all = result.data.data.pageCount;
                })
            },
            pageclick: function (index) {//页码点击事件
                if (index != this.cur) {
                    this.pages.cur = index
                }
                this.getpage();
            },
            go: function () {
                if (this.pages.txtpage == "") {
                    return;
                }
                else {
                    this.pages.cur = this.pages.txtpage;
                }
                this.getpage();
            },
            add: function () {
                this.adds.content = "";
                this.adds.url = "Http://";
                this.adds.failureTime = "";
                $("#failureTime").val("");
                var that = this;
                layer.open({
                    type: 1,
                    title: '添加用户',
                    maxmin: true,
                    shadeClose: false, //点击遮罩关闭层
                    area: ['450px', '430px'],
                    content: $('#add'),
                    btn: ['确认', '取消'],
                    yes: function (index, layero) {
                        if (that.adds.content == "") {
                            layer.alert('公告内容不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        if (that.adds.url == "") {
                            layer.alert('转向连接不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        if (that.adds.faliureTime == "") {
                            layer.alert('失效时间不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        that.$http.post('/admin/notice/add', { content: that.adds.content, url: that.adds.url, failureTime: that.adds.failureTime }, { emulateJSON: true }).then(function (result) {
                            if (result.data.status == 1) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                                layer.close(index);
                                that.getpage();
                            }
                            else if (result.data.status == 0) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                                //that.msg = result.data.msg;
                            }
                            else if (result.data.status == 302) {
                                window.location.href = result.data.data;
                            }
                            else if (result.data.status == 401) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                            }
                        });
                    }
                });
            },
            edit: function (id) {
                var that = this;
                that.$http.post('/admin/notice/getmodel', { id: id }, { emulateJSON: true }).then(function (result) {
                    that.edits = result.data.data;
                    console.log(result.data.data.failureTime);
                    $("#failureTime1").val(that.edits.failureTime);
                });
                layer.open({
                    type: 1,
                    title: '修改用户',
                    maxmin: true,
                    shadeClose: false, //点击遮罩关闭层
                    area: ['450px', '430px'],
                    content: $('#edit'),
                    btn: ['确认', '取消'],
                    yes: function (index, layero) {
                        if (that.edits.content == "") {
                            layer.alert('公告内容不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        if (that.edits.url == "") {
                            layer.alert('转向连接不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        if (that.edits.failureTime == "") {
                            layer.alert('失效时间不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        that.$http.post('/admin/notice/edit', { id: id, content: that.edits.content, url: that.edits.url, failureTime: that.edits.failureTime }, { emulateJSON: true }).then(function (result) {
                            if (result.data.status == 1) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                                layer.close(index);
                                that.getpage();
                            }
                            else if (result.data.status == 0) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                                //that.msg = result.data.msg;
                            }
                            else if (result.data.status == 302) {
                                window.location.href = result.data.data;
                            }
                            else if (result.data.status == 401) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                            }
                        });
                    }
                });
            },
            del: function (id) {
                var that = this;
                layer.confirm("幻灯片删除后无法恢复，确认删除吗？", { icon: 0, title: '是否删除幻灯片' }, function (index) {
                    that.$http.post('/admin/notice/del', { id: id }, { emulateJSON: true }).then(function (result) {
                        if (result.data.status == 1) {
                            layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                            that.getpage();
                        }
                        else if (result.data.status == 0) {
                            layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            //that.msg = result.data.msg;
                        }
                        else if (result.data.status == 302) {
                            window.location.href = result.data.data;
                        }
                        else if (result.data.status == 401) {
                            layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                        }
                    });
                });
            },
            search: function () {
                this.getpage();
            }
        },
        computed: {
            indexs: function () {
                var left = 1;
                var right = this.pages.all;
                var ar = [];
                if (this.pages.all >= 5) {
                    if (this.pages.cur > 3 && this.pages.cur < this.pages.all - 2) {
                        left = this.pages.cur - 2
                        right = this.pages.cur + 2
                    } else {
                        if (this.pages.cur <= 3) {
                            left = 1
                            right = 5
                        } else {
                            right = this.pages.all
                            left = this.pages.all - 4
                        }
                    }
                }
                while (left <= right) {
                    ar.push(left)
                    left++
                }
                return ar
            }
        },
        mounted: function () {
            this.$http.post('/admin/notice/list', { keyword: this.searchs.keyword, startTime: this.searchs.startTime, endTime: this.searchs.endTime, pageIndex: this.pages.cur }, { emulateJSON: true }).then(function (result) {
                this.notices = result.data.data.notices;
                this.pages.all = result.data.data.pageCount;
            })
        }
    });
    laydate({
        elem: 'failureTime',
        event: 'focus'
    });
    laydate({
        elem: 'failureTime1',
        event: 'focus'
    });
</script>
