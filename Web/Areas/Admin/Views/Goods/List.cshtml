<script type="text/javascript">
    var vue = new Vue({
        el: "#app",
        data: {
            imgList: [],
            size: 0,
            goods: [],
            goodsTypes: [],
            goodsTypeId: "",
            goodsSecondTypes: [],
            goodsSecondTypeId: "",
            pages: {
                all: "", cur: 1, txtpage: ""
            },
            searchs: {
                startTime: "", endTime: "", keyword: ""
            },
            adds:[]
        },
        methods: {
            fileClick() {
                document.getElementById('upload_file').click()
            },
            fileChange(el) {
                if (!el.target.files[0].size) return;
                this.fileList(el.target);
                el.target.value = ''
            },
            fileList(fileList) {
                let files = fileList.files;
                for (let i = 0; i < files.length; i++) {
                    //判断是否为文件夹
                    if (files[i].type != '') {
                        this.fileAdd(files[i]);
                    } else {
                        //文件夹处理
                        this.folders(fileList.items[i]);
                    }
                }
            },
            //文件夹处理
            folders(files) {
                let _this = this;
                //判断是否为原生file
                if (files.kind) {
                    files = files.webkitGetAsEntry();
                }
                files.createReader().readEntries(function (file) {
                    for (let i = 0; i < file.length; i++) {
                        if (file[i].isFile) {
                            _this.foldersAdd(file[i]);
                        } else {
                            _this.folders(file[i]);
                        }
                    }
                })
            },
            foldersAdd(entry) {
                let _this = this;
                entry.file(function (file) {
                    _this.fileAdd(file)
                })
            },
            fileAdd(file) {
                //总大小
                this.size = this.size + file.size;
                //判断是否为图片文件
                if (file.type.indexOf('image') == -1) {
                    file.src = 'wenjian.png';
                    this.imgList.push('wenjian.png');
                } else {
                    let reader = new FileReader();
                    reader.vue = this;
                    reader.readAsDataURL(file);
                    reader.onload = function () {
                        file.src = this.result;
                        this.vue.imgList.push(file.src);
                    }
                }
            },
            fileDel(index) {
                //this.size = this.size - this.imgList[index].file.size;//总大小
                this.imgList.splice(index, 1);
            },            
            getpage: function () {
                this.$http.post('/admin/goods/list', { levelId: this.levelId, keyword: this.searchs.keyword, startTime: this.searchs.startTime, endTime: this.searchs.endTime, pageIndex: this.pages.cur }, { emulateJSON: true }).then(function (result) {
                    this.goods = result.data.data.goods;
                    this.goodsTypes = result.data.data.goodsTypes;
                    this.pages.all = result.data.data.pageCount;
                })
            },
            pageclick: function (index) {//页码点击事件
                if (index != this.cur) {
                    this.pages.cur = index
                }
                this.getpage();
            },
            go: function () {
                if (this.pages.txtpage == "") {
                    return;
                }
                else {
                    this.pages.cur = this.pages.txtpage;
                }
                this.getpage();
            },
            add: function () {
                layer.open({
                    type: 1,
                    title: '添加用户',
                    maxmin: true,
                    shadeClose: false, //点击遮罩关闭层
                    area: ['1200px', '600px'],
                    content: $('#add'),
                    btn: ['确认', '取消'],
                    yes: function (index, layero) {
                        that.$http.post('/admin/goods/add', { id: id, imgFile: that.imgUrl }, { emulateJSON: true }).then(function (result) {
                            if (result.data.status == 1) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                                layer.close(index);
                                that.getpage();
                            }
                            else if (result.data.status == 0) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                                //that.msg = result.data.msg;
                            }
                            else if (result.data.status == 302) {
                                window.location.href = result.data.data;
                            }
                            else if (result.data.status == 401) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                            }
                        });
                    }
                });
            },
            search: function () { },
            upload: function (id) {
                this.imgList = [];
                var that = this;
                that.$http.post('/admin/goods/getimg', { id: id }, { emulateJSON: true }).then(function (result) {
                    that.imgList = result.data.data;                    
                });

                layer.open({
                    type: 1,
                    title: '添加用户',
                    maxmin: true,
                    shadeClose: false, //点击遮罩关闭层
                    area: ['1200px', '600px'],
                    content: $('#upload'),
                    btn: ['确认', '取消'],
                    yes: function (index, layero) {
                        if (that.imgList.length <=0) {
                            layer.alert('商品图片不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        that.$http.post('/admin/goods/upload', { id: id, imgFiles: that.imgList }, { emulateJSON: true }).then(function (result) {
                            if (result.data.status == 1) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                                layer.close(index);
                                that.getpage();
                            }
                            else if (result.data.status == 0) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                                //that.msg = result.data.msg;
                            }
                            else if (result.data.status == 302) {
                                window.location.href = result.data.data;
                            }
                            else if (result.data.status == 401) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                            }
                        });
                    }
                });
            }
        },
        computed: {
            indexs: function () {
                var left = 1;
                var right = this.pages.all;
                var ar = [];
                if (this.pages.all >= 5) {
                    if (this.pages.cur > 3 && this.pages.cur < this.pages.all - 2) {
                        left = this.pages.cur - 2
                        right = this.pages.cur + 2
                    } else {
                        if (this.pages.cur <= 3) {
                            left = 1
                            right = 5
                        } else {
                            right = this.pages.all
                            left = this.pages.all - 4
                        }
                    }
                }
                while (left <= right) {
                    ar.push(left)
                    left++
                }
                return ar
            }
        },
        mounted: function () {
            this.$http.post('/admin/goods/list', { levelId: this.levelId, keyword: this.searchs.keyword, startTime: this.searchs.startTime, endTime: this.searchs.endTime, pageIndex: this.pages.cur }, { emulateJSON: true }).then(function (result) {
                this.goods = result.data.data.goods;
                this.goodsTypes = result.data.data.goodsTypes;
                this.pages.all = result.data.data.pageCount;
            })
        }
    });

